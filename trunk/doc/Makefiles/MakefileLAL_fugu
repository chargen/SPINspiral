MCMCLFLAGS = -static -ipa -L/home/vivien/head/opt/lscsoft/lal/lib -llal -L/export/apps/gsl-1.11/lib/ -lgsl -lgslcblas -L/home/vivien/opt/lscsoft/non-lsc/lib -lfftw3 -lfftw3f -lm -L ~/bin/lib -lFrame
#-L/share/apps/fftw/lib/ -lfftw3
MCMCOBJ = mcmc_main.o mcmc_mcmc.o mcmc_templates.o mcmc_routines.o mcmc_data.o mcmc_parameters.o mcmc_signal.o mcmc_3rdparty.o mcmc_lal.o

#WAVELFLAGS = -lfftw3
WAVELFLAGS = -static -ipa -L ~/bin/lib -lFrame -lfftw3 -lgsl -lgslcblas -lm
WAVEOBJ = waveform_main.o mcmc_templates.o mcmc_routines.o waveform_data.o mcmc_parameters.o mcmc_signal.o mcmc_3rdparty.o mcmc_lal.o



.c.o:
	$(CC) $(CFLAGS) -c $?

exit:


mcmc: $(MCMCOBJ) 
	$(CC) -o mcmc $(MCMCOBJ) $(MCMCLFLAGS)

waveform: $(WAVEOBJ) 
	$(CC) -o waveform $(WAVEOBJ) $(WAVELFLAGS)

all: mcmc waveform



clean:
	rm -f *.o 

cleanbin:
	rm -f mcmc waveform

cleanoutput:
	rm -f mcmc.input.* mcmc.output.* *-signal*.dat

cleanall: clean cleanbin cleanoutput

